<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.company.haloshop.membership.MembershipMapper">

    <!-- 전체 조회 -->
    <select id="findAll" resultType="com.company.haloshop.dto.shop.Membership">
        SELECT * FROM membership ORDER BY id DESC
    </select>

    <!-- ID로 단건 조회 -->
    <select id="findById" parameterType="int" resultType="com.company.haloshop.dto.shop.Membership">
        SELECT * FROM membership WHERE id = #{id}
    </select>

    <!-- 등록 -->
    <insert id="insert" parameterType="com.company.haloshop.dto.shop.Membership">
        INSERT INTO membership (name, price, price_point)
        VALUES (#{name}, #{price}, #{pricePoint})
    </insert>

    <!-- 수정 -->
    <update id="update" parameterType="com.company.haloshop.dto.shop.Membership">
        UPDATE membership
        SET name = #{name},
            price = #{price},
            price_point = #{pricePoint}
        WHERE id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="delete" parameterType="int">
        DELETE FROM membership WHERE id = #{id}
    </delete>

</mapper>
